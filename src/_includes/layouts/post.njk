---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="pt4 pt5-ns pb4 vs5">
  <div class="vs4">
    <div class="vs3">
      {% Heading level=1 %}
        {{title}}
      {% endHeading %}

      <time class="db" datetime="{{date}}">
        {{date | readableDate}}
      </time>
    </div>

    {# Video #}
    {% if videoId %}
      {% include "youtubeVideo.njk" %}
    {% endif %}
  </div>

  {# Contents #}
  <div class="vs3">
    {% Subheading level=2 %}
      Description
    {% endSubheading %}

    <div>
      {% MarkdownBlock %}
        {{ content | safe }}
      {% endMarkdownBlock %}
    </div>
  </div>

  {# Transcript #}
  {% if transcriptFile %}
    <div class="vs3">
      {% Subheading level=2 %}
        Transcript
      {% endSubheading %}
      {% VideoCaptions transcriptFile=transcriptFile %}
    </div>
  {% endif %}

  {# Backlink #}
  {% Text %}
    {% Link { href: '/' | url } %}
      ‚Üê Home
    {% endLink %}
  {% endText %}
</article>
